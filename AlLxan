<div class="container">
  <img src="scr/al.jpeg" alt="ALIXAN" class="photo">
  <h1>Туған күнге ақша жинау</h1>
  <p>Достары болсандар жинап тастаик уят болмасын бірге ақша жинап жатырмыз!</p>
  <p>Kaspi нөмірі: <span class="kaspi">+7 705 991 03 83</span></p>

  <input type="text" id="name" placeholder="Атыңыз">
  <input type="number" id="amount" placeholder="Сома (₸)">
  <button onclick="addContribution()">Қосу</button>

  <table id="contributionsTable">
    <thead>
      <tr><th>Аты</th><th>Сома (₸)</th></tr>
    </thead>
    <tbody></tbody>
    <tfoot>
      <tr><th class="total">Жиынтық</th><th class="total" id="totalAmount">0</th></tr>
    </tfoot>
  </table>
</div>

<script>
  let total = 0;
  function addContribution() {
    const name = document.getElementById('name').value;
    const amount = parseFloat(document.getElementById('amount').value);
    if(!name || isNaN(amount) || amount <= 0) { alert("Дұрыс ақпарат енгізіңіз"); return; }
    const table = document.getElementById('contributionsTable').getElementsByTagName('tbody')[0];
    const row = table.insertRow();
    row.insertCell(0).innerText = name;
    row.insertCell(1).innerText = amount.toFixed(2);
    total += amount;
    document.getElementById('totalAmount').innerText = total.toFixed(2);
    document.getElementById('name').value = "";
    document.getElementById('amount').value = "";
  }
</script>

